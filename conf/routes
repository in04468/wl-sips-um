# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET           /                    controllers.Application.index()

# JavaScript routes object
GET           /jsroutes.js         controllers.Application.jsRoutes()

# Routes used by Angular
# ~~~~

# Authentication
POST          /login               controllers.Application.login()
POST          /logout              controllers.Application.logout()

GET            /environment         controllers.Application.environment()

# Users
GET           /users/:id           controllers.Users.user(id: String)
POST          /users               controllers.Users.createUser()
PUT           /users/:id           controllers.Users.updateUser(id: String)
DELETE        /users/:id           controllers.Users.deleteUser(id: String)
GET           /authuser            controllers.Users.authUser()
GET           /retrieveuser        controllers.Users.retrieveUser(token: String)
PUT           /activateuser        controllers.Users.activateUser()

# SalesforceAPI
#GET           /contacts            controllers.Salesforce.getContacts()

# Captcha
GET           /verifycaptcha       controllers.Captcha.verifyCaptcha(response: String)

# Static
# ~~~~

# Map static resources from the /public folder to the /assets URL path
GET           /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)

